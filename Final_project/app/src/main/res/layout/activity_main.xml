<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/back_sky" />

    <TextView
        android:id="@+id/dustText"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/oval_shape"
        android:gravity="center"
        android:text="매우나쁨\n(151㎍/m³)"
        android:textColor="#F44336"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="185dp"
        android:background="@drawable/oval_shape"
        android:gravity="center"
        android:text="26.0 C"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/humText"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="185dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/oval_shape"
        android:gravity="center"
        android:text="30.5 %"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/dustLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/dustText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="178dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/dust" />

    <ImageView
        android:id="@+id/humLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/humText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="103dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/hum" />

    <ImageView
        android:id="@+id/tempLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/tempText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginBottom="7dp"
        app:srcCompat="@drawable/temperature" />

    <ImageView
        android:id="@+id/lightBulbLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/background"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="470dp"
        app:srcCompat="@drawable/lightbulb" />

    <TextView
        android:id="@+id/lightBulbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="496dp"
        android:layout_toEndOf="@+id/lightBulbLogo"
        android:layout_toRightOf="@+id/lightBulbLogo"
        android:text="전등 제어" />

    <Button
        android:id="@+id/turnOnButton"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="482dp"
        android:layout_toEndOf="@+id/lightBulbText"
        android:layout_toRightOf="@+id/lightBulbText"
        android:text="ON" />

    <Button
        android:id="@+id/turnOffButton"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="482dp"
        android:layout_toEndOf="@+id/turnOnButton"
        android:layout_toRightOf="@+id/turnOnButton"
        android:text="OFF" />

    <ImageView
        android:id="@+id/alarmLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/background"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="550dp"
        app:srcCompat="@drawable/alarm" />

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="577dp"
        android:layout_toEndOf="@+id/alarmLogo"
        android:layout_toRightOf="@+id/alarmLogo"
        android:text="알람 설정" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="569dp"
        android:layout_toEndOf="@+id/alarmText"
        android:layout_toRightOf="@+id/alarmText" />

    <Button
        android:id="@+id/setAlarmTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="564dp"
        android:layout_toEndOf="@+id/lightBulbText"
        android:layout_toRightOf="@+id/lightBulbText"
        android:text="알람 시간 설정"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="67dp"
        android:layout_height="81dp"
        android:layout_alignEnd="@+id/background"
        android:layout_alignRight="@+id/background"
        android:layout_alignBottom="@+id/background"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="23dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        app:theme="@style/AppTheme" />


</RelativeLayout>