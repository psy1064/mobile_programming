<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/djulogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/schoolname"
        app:srcCompat="@drawable/djulogo" />

    <TextView
        android:id="@+id/schoolname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:text="대전대학교"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="50dp"
        android:text="박 세 용"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="7dp"
        android:text="전자정보통신공학과"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subschoolname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/major"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="7dp"
        android:text="대전대학교"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/schooladdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subschoolname"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="50dp"
        android:text="34520) 대전광역시 동구 용운동 대학로 62"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schooladdr"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:text="Moblie. 010 3538 1064"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonenumber"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:text="E-mail. sypark1064@gmail.com"/>

    <Button
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light"
        android:text="english" />
</RelativeLayout>